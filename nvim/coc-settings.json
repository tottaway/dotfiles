{
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 20,
    "python.linting.pylintUseMinimalCheckers": false,
   "coc.preferences.formatOnSaveFiletypes": ["rust"],
    "python.formatting.provider": "yapf",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "~/.local/bin/pylint",
    "python.linting.pylintArgs": [ "--disable=C,R" ],
    "diagnostic.displayByAle": false,
    "suggest.completionItemKindLabels": {
        "function": "\uf794",
        "method": "\uf6a6",
        "variable": "\uf71b",
        "constant": "\uf8ff",
        "struct": "\ufb44",
        "class": "\uf0e8",
        "interface": "\ufa52",
        "text": "\ue612",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "module": "\uf668",
        "color": "\ue22b",
        "property": "\ufab6",
        "field": "\uf93d",
        "unit": "\uf475",
        "file": "\uf471",
        "value": "\uf8a3",
        "event": "\ufacd",
        "folder": "\uf115",
        "keyword": "\uf893",
        "snippet": "\uf64d",
        "operator": "\uf915",
        "reference": "\uf87a",
        "typeParameter": "\uf278",
        "default": "\uf29c"
    },
  "rust-analyzer.enable": true,
  "rust-analyzer.rustfmt.overrideCommand": [
          "rustup",
          "run",
          "nightly",
          "--",
          "rustfmt",
          "--"
      ],
  "rust-analyzer.cargo.allFeatures": true,
    "coc.preferences.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json",
        ".root"
    ],
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": [
                "build.sbt"
            ],
            "filetypes": [
                "scala",
                "sbt"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {},
            "settings": {
                "languageServerHaskell": {
                    "hlintOn": false,
                    "maxNumberOfProblems": 10,
                    "completionSnippetsOn": true
                }
            }
        }
    }
}
