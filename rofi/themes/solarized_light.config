/* ==========================================================================
   Rofi color theme

   Based on the Gruvbox color scheme for Vim by morhetz
   https://github.com/morhetz/solarized

   File: solarized-light-hard.rasi
   Desc: Gruvbox light (hard contrast) color theme for Rofi
   Author: bardisty <b@bah.im>
   Source: https://github.com/bardisty/solarized-rofi
   Modified: Mon Feb 12 2018 06:04:48 PST -0800
   ========================================================================== */

* {
    /* Theme settings */
    highlight: bold italic;
    scrollbar: true;

    /* Gruvbox light colors */
    solarized-light-bg0-hard:     #fdf6e3;
    solarized-light-bg0:          #eee8d5;
    solarized-light-bg1:          #268bd2;
    solarized-light-fg0:          #fdf6e3;
    solarized-light-fg1:          #586e75;
    solarized-light-red-dark:     #b58900;
    solarized-light-red-light:    #b58900;
    solarized-light-blue-dark:    #268bd2;
    solarized-light-blue-light:   #268bd2;
    solarized-light-gray:         #002b36;

    /* Theme colors */
    background:                  @solarized-light-bg0-hard;
    background-color:            @background;
    foreground:                  @solarized-light-fg1;
    border-color:                @solarized-light-gray;
    separatorcolor:              @border-color;
    scrollbar-handle:            @border-color;

    normal-background:           @background;
    normal-foreground:           @foreground;
    alternate-normal-background: @solarized-light-bg0;
    alternate-normal-foreground: @foreground;
    selected-normal-background:  @solarized-light-bg1;
    selected-normal-foreground:  @solarized-light-fg0;

    active-background:           @solarized-light-yellow-dark;
    active-foreground:           @background;
    alternate-active-background: @active-background;
    alternate-active-foreground: @active-foreground;
    selected-active-background:  @solarized-light-yellow-light;
    selected-active-foreground:  @active-foreground;

    urgent-background:           @solarized-light-red-dark;
    urgent-foreground:           @background;
    alternate-urgent-background: @urgent-background;
    alternate-urgent-foreground: @urgent-foreground;
    selected-urgent-background:  @solarized-light-red-light;
    selected-urgent-foreground:  @urgent-foreground;
}

@import "gruvbox-common.rasi"

